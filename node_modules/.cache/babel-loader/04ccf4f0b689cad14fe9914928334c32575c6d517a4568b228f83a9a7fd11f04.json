ccess: (state,action)=>{\r\n      state.quantity -= 1;\r\n      state.products.splice(state.products.findIndex((item)=>item._id === action.payload._id),1);\r\n      state.total = action.payload.totalPrice\r\n    },\r\n\r\n    \r\n \r\n    updateProductQuantitySuccessful: (state,action)=>{\r\n      state.isFetching = false;\r\n      const index = state.products.findIndex((item) => item._id === action.payload.id);\r\n      if (index !== -1) {\r\n        state.products[index].quantity = action.payload.quantity;\r\n    }\r\n  },\r\n   \r\n    \r\n    resetCart: (state)=>{\r\n      state.products = [];\r\n      state.quantity = 0;\r\n      state.total = 0;\r\n    },\r\n\r\n  }\r\n});\r\n\r\nexport const {addProduct,removeProductSuccess,resetCart,updateProductQuantityStart,updateProductQuantitySuccessful,updateProductQuantityFailure} = cartSlice.actions;\r\nexport default cartSlice.reducer;"],"mappings":"AAAA,OAASA,WAAW,KAAQ,kBAAkB,CAE9C,KAAM,CAAAC,SAAS,CAAGD,WAAW,CAAC,CAC5BE,IAAI,CAAE,MAAM,CACZC,YAAY,CAAE,CACZC,QAAQ,CAAE,EAAE,CACZC,QAAQ,CAAE,CAAC,CACXC,KAAK,CAAE,CAAC,CACRC,UAAU,CAAG,KAAK,CAClBC,KAAK,CAAG,KACV,CAAC,CACDC,QAAQ,CAAC,CACPC,UAAU,CAAEA,CAACC,KAAK,CAACC,MAAM,GAAG,CAC1BD,KAAK,CAACN,QAAQ,EAAI,CAAC,CACnBM,KAAK,CAACP,QAAQ,CAACS,IAAI,CAACD,MAAM,CAACE,OAAO,CAAC,CACnCH,KAAK,CAACL,KAAK,EAAIM,MAAM,CAACE,OAAO,CAACC,KAAK,CAAGH,MAAM,CAACE,OAAO,CAACT,QAAQ,CAC/D,CAAC,CAEDW,oBAAoB,CAAEA,CAACL,KAAK,CAACC,MAAM,GAAG,CACpCD,KAAK,CAACN,QAAQ,EAAI,CAAC,CACnBM,KAAK,CAACP,QAAQ,CAACa,MAAM,CAACN,KAAK,CAACP,QAAQ,CAACc,SAAS,CAAEC,IAAI,EAAGA,IAAI,CAACC,GAAG,GAAKR,MAAM,CAACE,OAAO,CAACM,GAAG,CAAC,CAAC,CAAC,CAAC,CAC1FT,KAAK,CAACL,KAAK,CAAGM,MAAM,CAACE,OAAO,CAACO,UAAU,CACzC,CAAC,CAIDC,+BAA+B,CAAEA,CAACX,KAAK,CAACC,MAAM,GAAG,CAC/CD,KAAK,CAACJ,UAAU,CAAG,KAAK,CACxB,KAAM,CAAAgB,KAAK,CAAGZ,KAAK,CAACP,QAAQ,CAACc,SAAS,CAAEC,IAAI,EAAKA,IAAI,CAACC,GAAG,GAAKR,MAAM,CAACE,OAAO,CAACU,EAAE,CAAC,CAChF,GAAID,KAAK,GAAK,CAAC,CAAC,CAAE,CAChBZ,KAAK,CAACP,QAAQ,CAACmB,KAAK,CAAC,CAAClB,QAAQ,CAAGO,MAAM,CAACE,OAAO,CAA